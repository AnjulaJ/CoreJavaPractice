<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="cheating" class="com.seleniumexpress.classrefer.Cheat"></bean>

    <bean id="student" class="com.seleniumexpress.classrefer.Student" >
        <property name="id" value="0001"/>
        <property name="cheat" ref="cheating"/>
    </bean>

    <bean id="anotherStudent" class="com.seleniumexpress.classrefer.AnotherStudent">
        <property name="cheat" ref="cheating"/>
    </bean>

</beans>